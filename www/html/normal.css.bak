* {
    box-sizing: border-box;
}

body {
  background-color: #bcbcbc;
  margin: 0;
}

h1{
  font-family: 'Abel';
  font-size: 22;
  margin: 10;
}

.header {
    background-color: white;
    color: #787878;
    padding: 10px;
    padding-bottom: 5px;
}

.outer {
  display: flex;
  width: 100%;
  height: 23%;
  background-color: #ababab;
  border: 1px solid white;
}

.inner {
  display: flex;
  align-items:center;
  margin: auto;
}
a{
    display: block;
    height: 100%;
    margin: 0;
    padding: 0;
    font-family: 'Abel';
    font-size: 25;
    color: #FFFFFF;
    text-decoration: none;
}
a:hover {
    background-color: #787878;
}

@media only screen and (min-resolution: 150dpi) {

    h1{
        font-size: 32;
    }
    .menu li {
        height: 33%;
    }
    .linkIcon{
    float: left;
    height: 100%;
    padding-top: 12%;
    padding-bottom: 12%;
}